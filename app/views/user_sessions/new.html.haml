= render :partial => 'users/for_head'
%h1 Login

.formBackground 
  .loginForm 
    %fieldset 
      %legend Please Log In
      - form_for @user_session do |f|
        %table 
          %tbody 
            %tr 
              %td= f.label      :login 
              %td= f.text_field :login
            %tr 
              %td= f.label          :password
              %td= f.password_field :password
            %tr 
              %td{ :colspan => '2' }
                = f.submit "Login"
            %tr
              %td{ :colspan => '2' }
                = link_to "Forgot your password?", new_password_reset_path