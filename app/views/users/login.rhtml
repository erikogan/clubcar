<div class="loginForm">
    <fieldset>
      <legend>Please Log In</legend>
      <% form_tag do %>
      <p>
	<label for="login">Login:</label>
	<%= text_field_tag :login, params[:login] %>
      </p>
      <p>
	<label for="plain_password">Password:</label>
	<%= password_field_tag :plain_password, params[:plain_password] %>
      </p>
      <%= submit_tag "Login" %>
      <% end %>
    </fieldset>
</div>
