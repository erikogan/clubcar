<h1>Editing email</h1>

<%= error_messages_for :email %>

<% form_for(:email, :url => email_path(@email), :html => { :method => :put }) do |f| %>
  <p>
    <b>Email</b><br />
    <%= f.text_field :email %>
  </p>

  <p>
    <%= submit_tag "Update" %>
  </p>
<% end %>

<%= link_to 'Show', email_path(@user, @email) %> |
<%= link_to 'Back', emails_path %>