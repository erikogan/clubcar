<h1>Listing emails</h1>

<table>
  <tr>
    <th>Address</th>
  </tr>
  
<% for email in @emails %>
  <tr class="<%= cycle('rowA', 'rowB') %>">
    <td><%=h email.address %></td>
    <td><%= link_to 'Show', email_path(@user, email) %></td>
    <td><%= link_to 'Edit', edit_email_path(@user, email) %></td>
    <td><%= link_to 'Destroy', email_path(@user, email), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New email', new_email_path %>
