- clarify_title "#{@mood.name} [for #{@user.name}]"
%h1 Mood

%p 
  %b Name:
  = h @mood.name

%p 
  %b Sort order:
  = h @mood.order

= link_to 'Edit', edit_user_mood_path(@user, @mood)
|
= link_to 'Back', user_moods_path(@user)

%h2= link_to 'Preferences', user_mood_preferences_path(@user, @mood)

= render :partial => '/preferences/list', :object => @mood.preferences.sort {|a,b| a.restaurant.name.casecmp(b.restaurant.name) }
