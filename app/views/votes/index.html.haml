%h1 Listing votes

%table 
  %tr 
    %th Name
    %th Value
  
  - for vote in @votes
    %tr{ :class => cycle('rowA', 'rowB') }
      %td= h vote.name
      %td= h vote.value
      %td= link_to 'Show', vote_path(vote)
      %td= link_to 'Edit', edit_vote_path(vote)
      %td= link_to 'Destroy', vote_path(vote), :confirm => 'Are you sure?', :method => :delete

%br 

= link_to 'New vote', new_vote_path
